{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "ordered-imports": false, // gets very annoying as the ide does not order them automatically
    "interface-name": false, // no I am not beginning every 'interface' with I
    "max-classes-per-file": false, // it's ok to have multiple small components in the file
    "object-literal-sort-keys": false, // this one gets annoying fast, I can decide the most natural order
    "no-empty-interface": false // empty interfaces can be useful if we will add stuff later
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
